<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/personal_gray_bg"
    tools:context=".view.activity.FocusGroupActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/focus_group_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/title_background"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/title_bg"
            app:layout_constraintTop_toTopOf="parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/title_background">
            <ImageView
                android:id="@+id/focus_group_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_left"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:text="重点人群"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"/>
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_below="@+id/focus_group_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/focus_group_refresh">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/focus_group_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</RelativeLayout>