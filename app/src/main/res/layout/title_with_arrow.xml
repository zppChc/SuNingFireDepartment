<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/title_background"
        style="@style/TitleBackgroundPic"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/title_image_back"
        app:layout_constraintBottom_toBottomOf="@+id/title_background"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        style="@style/ImageBack"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@+id/grid_num">

        <TextView
            android:id="@+id/title_name"
            style="@style/TitleTextView"/>
        <TextView
            android:id="@+id/work_calendar"
            style="@style/TitleTextView"
            android:layout_marginBottom="10dp"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"
            android:layout_marginEnd="10dp"
            android:text="@string/work_bar"
            android:visibility="gone"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/grid_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:textSize="12sp"
        android:layout_marginBottom="2dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/title_background"/>
</android.support.constraint.ConstraintLayout>