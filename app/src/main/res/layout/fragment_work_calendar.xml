<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_with_arrow"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/work_category_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:background="@color/home_page_cut_line_gray"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/prev_month"
            android:text="上月"
            android:layout_weight="1"
            android:paddingStart="10dp"
            style="@style/SelectMonthTextView"/>
        <TextView
            android:id="@+id/month_display"
            android:layout_weight="2"
            android:text="2018年6月"
            android:gravity="center"
            style="@style/SelectMonthTextView"/>
        <TextView
            android:id="@+id/next_month"
            android:layout_weight="1"
            android:text="下月"
            android:gravity="right"
            android:paddingEnd="10dp"
            style="@style/SelectMonthTextView"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            style="@style/WeekTextView"
            android:text="一"/>
        <TextView
            style="@style/WeekTextView"
            android:text="二"/>
        <TextView
            style="@style/WeekTextView"
            android:text="三"/>
        <TextView
            style="@style/WeekTextView"
            android:text="四"/>
        <TextView
            style="@style/WeekTextView"
            android:text="五"/>
        <TextView
            style="@style/WeekTextView"
            android:text="六"/>
        <TextView
            style="@style/WeekTextView"
            android:text="日"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/calendar_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>