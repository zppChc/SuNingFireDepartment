<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".view.activity.WorkDetailFinishActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/work_detail_finish_title_background"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/title_blue_bg"
            app:layout_constraintTop_toTopOf="parent"/>
        <RelativeLayout
            android:id="@+id/work_detail_finish_title_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/work_detail_finish_title_background">
            <ImageView
                android:id="@+id/work_finish_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_left"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/work_detail_finish_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10sp"
                android:text="工作标题"
                android:width="200dp"
                android:ellipsize="middle"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/temp_work_finish_content_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="15dp"
            app:layout_constraintTop_toBottomOf="@+id/work_detail_finish_title_background"
            android:background="@color/home_page_cut_line_gray"
            android:text="巡查详细信息"
            android:textSize="14sp"
            android:textColor="@color/textGray"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:id="@+id/work_detail_finish_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@+id/temp_work_finish_content_title"
            android:orientation="vertical">
        </LinearLayout>
        <TextView
            android:id="@+id/temp_work_finish_take_photo_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/home_page_cut_line_gray"
            app:layout_constraintTop_toBottomOf="@+id/work_detail_finish_linear_layout"
            android:textColor="@color/textGray"
            android:text="巡查图片"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:paddingLeft="15dp"
            android:layout_marginBottom="10dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/work_detail_finish_pic_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/temp_work_finish_take_photo_title"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>