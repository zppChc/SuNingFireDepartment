<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.WorkDetailFinishActivity">
    <include layout="@layout/title_with_arrow"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/temp_work_finish_content_title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="15dp"
            android:background="@color/home_page_cut_line_gray"
            android:text="巡查详细信息"
            android:textSize="14sp"
            android:textColor="@color/textGray"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:id="@+id/work_detail_finish_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@+id/temp_work_finish_content_title"
            android:orientation="vertical">
        </LinearLayout>
        <TextView
            android:id="@+id/temp_work_finish_take_photo_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/home_page_cut_line_gray"
            app:layout_constraintTop_toBottomOf="@+id/work_detail_finish_linear_layout"
            android:textColor="@color/textGray"
            android:text="巡查图片"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:paddingLeft="15dp"
            android:layout_marginBottom="10dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/work_detail_finish_pic_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/temp_work_finish_take_photo_title"/>
    </android.support.constraint.ConstraintLayout>
    </ScrollView>
</LinearLayout>