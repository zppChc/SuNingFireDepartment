<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.SubGridActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/sub_grid_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/title_background"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/title_bg"
            app:layout_constraintTop_toTopOf="parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/title_background">
            <ImageView
                android:id="@+id/sub_grid_back_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_left"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/sub_grid_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/sub_grid_work_tv"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="10dp"
                android:text="工作"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sub_grid_title"
        android:layout_marginBottom="50dp"
        android:scrollbars="none">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- 高德地图-->
            <com.amap.api.maps2d.MapView
                android:id="@+id/map"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="4:3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <!-- 相关网格-->
            <LinearLayout
                android:id="@+id/temp_sub_grid_region"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/map">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@color/home_page_cut_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <View
                        android:id="@+id/temp_sub_grid_cut_line_one"
                        android:layout_width="4dp"
                        android:layout_height="25dp"
                        android:background="@color/home_page_sub_title_blue_line"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="相关网格"
                        android:textSize="20sp"
                        android:layout_toRightOf="@id/temp_sub_grid_cut_line_one"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sub_grid_region_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <!-- 相关单位 -->
            <LinearLayout
                android:id="@+id/temp_sub_grid_unit"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/temp_sub_grid_region">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@color/home_page_cut_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <View
                        android:id="@+id/temp_sub_grid_cut_line_two"
                        android:layout_width="4dp"
                        android:layout_height="25dp"
                        android:background="@color/home_page_sub_title_blue_line"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="相关单位"
                        android:textSize="20sp"
                        android:layout_toRightOf="@id/temp_sub_grid_cut_line_two"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sub_grid_unit_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <!-- 重点单位 -->
            <LinearLayout
                android:id="@+id/temp_sub_grid_place"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                app:layout_constraintTop_toBottomOf="@+id/temp_sub_grid_unit"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@color/home_page_cut_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <View
                        android:id="@+id/temp_sub_grid_cut_line_three"
                        android:layout_width="4dp"
                        android:layout_height="25dp"
                        android:background="@color/home_page_sub_title_blue_line"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="重点单位"
                        android:textSize="20sp"
                        android:layout_toRightOf="@id/temp_sub_grid_cut_line_three"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sub_grid_place_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>

            <!-- 重点人群 -->
            <LinearLayout
                android:id="@+id/temp_sub_grid_people"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                app:layout_constraintTop_toBottomOf="@+id/temp_sub_grid_place"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@color/home_page_cut_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <View
                        android:id="@+id/temp_sub_grid_cut_line_four"
                        android:layout_width="4dp"
                        android:layout_height="25dp"
                        android:background="@color/home_page_sub_title_blue_line"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="重点人群"
                        android:textSize="@dimen/sub_title_size"
                        android:layout_toRightOf="@id/temp_sub_grid_cut_line_four"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sub_grid_people_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <!-- 工作台账 -->
            <LinearLayout
                android:id="@+id/temp_sub_grid_work"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                app:layout_constraintTop_toBottomOf="@+id/temp_sub_grid_people"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@color/home_page_cut_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <View
                        android:id="@+id/temp_sub_grid_cut_line_five"
                        android:layout_width="4dp"
                        android:layout_height="25dp"
                        android:background="@color/home_page_sub_title_blue_line"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="工作台账"
                        android:textSize="@dimen/sub_title_size"
                        android:layout_toRightOf="@id/temp_sub_grid_cut_line_five"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sub_grid_work_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</RelativeLayout>