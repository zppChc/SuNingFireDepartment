<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.SubGridActivity">

    <RelativeLayout
        android:id="@+id/sub_grid_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp">
            <ImageView
                android:id="@+id/sub_grid_back_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_left"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:text="中网格"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"/>

            <TextView
                android:id="@+id/sub_grid_work_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:text="工作"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sub_grid_title"
        android:layout_marginBottom="50dp"
        android:scrollbars="none">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- 高德地图-->
            <com.amap.api.maps2d.MapView
                android:id="@+id/map"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="4:3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <!-- 相关网格-->
            <LinearLayout
                android:id="@+id/temp_sub_grid_region"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/map"
                android:layout_marginTop="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <View
                        android:id="@+id/temp_sub_grid_cut_line_one"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#0d98fd"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="相关网格"
                        android:textSize="20sp"
                        android:layout_toRightOf="@id/temp_sub_grid_cut_line_one"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="更多"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sub_grid_region_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <!-- 相关单位 -->
            <LinearLayout
                android:id="@+id/temp_sub_grid_unit"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/temp_sub_grid_region"
                android:layout_marginTop="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <View
                        android:id="@+id/temp_sub_grid_cut_line_two"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#0d98fd"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="相关单位"
                        android:textSize="20sp"
                        android:layout_toRightOf="@id/temp_sub_grid_cut_line_two"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="更多"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sub_grid_unit_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <!-- 重点单位 -->
            <LinearLayout
                android:id="@+id/temp_sub_grid_place"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                app:layout_constraintTop_toBottomOf="@+id/temp_sub_grid_unit"
                android:orientation="vertical"
                android:layout_marginTop="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <View
                        android:id="@+id/temp_sub_grid_cut_line_three"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#0d98fd"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="重点地点"
                        android:textSize="20sp"
                        android:layout_toRightOf="@id/temp_sub_grid_cut_line_three"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="更多"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sub_grid_place_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</RelativeLayout>