            <!-- 高德地图-->
            <com.amap.api.maps2d.MapView
                android:id="@+id/map"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="4:3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <!-- 相关网格-->
            <LinearLayout
                android:id="@+id/temp_sub_grid_region"
                app:layout_constraintTop_toBottomOf="@+id/map"
                style="@style/HomePageLinearLayout">
                <View
                    style="@style/HomePageGrayView"/>
                <RelativeLayout
                    style="@style/HomePageRelativeLayout">
                    <View
                        android:id="@+id/temp_sub_grid_cut_line_one"
                        style="@style/HomePageBlueFlagView"/>
                    <TextView
                        android:text="相关网格"
                        android:layout_toRightOf="@id/temp_sub_grid_cut_line_one"
                        style="@style/HomePageRecyclerViewDesc"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sub_grid_region_recycler_view"
                    style="@style/HomePageRecyclerView"/>
            </LinearLayout>
            <!-- 相关单位 -->
            <LinearLayout
                android:id="@+id/temp_sub_grid_unit"
                app:layout_constraintTop_toBottomOf="@id/temp_sub_grid_region"
                style="@style/HomePageLinearLayout">
                <View
                    style="@style/HomePageGrayView"/>
                <RelativeLayout
                    style="@style/HomePageRelativeLayout">
                    <View
                        android:id="@+id/temp_sub_grid_cut_line_two"
                        style="@style/HomePageBlueFlagView"/>
                    <TextView
                        android:text="相关单位"
                        android:layout_toRightOf="@id/temp_sub_grid_cut_line_two"
                        style="@style/HomePageRecyclerViewDesc"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sub_grid_unit_recycler_view"
                    style="@style/HomePageRecyclerView"/>
            </LinearLayout>
