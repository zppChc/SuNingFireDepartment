<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeLaunch" parent="AppTheme">
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@drawable/welcome</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#f0f0f0</item>
        <item name="colorControlActivated">#f0f0f0</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme"/>
    
    <style name="ActivityTranslucentTheme" parent="AppTheme"/>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">13sp</item>
    </style>
</resources>
